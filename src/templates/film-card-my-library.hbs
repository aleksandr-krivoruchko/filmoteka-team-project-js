<li class='item' data-id='{{id}}'>
  <div class='thumb'><img src='https://image.tmdb.org/t/p/w500{{poster_path}}' alt='' /></div>
  <div>
    <p class='item__title'>
      {{original_title}}
    </p>
    <p class='item__genre'>
      {{genres.0.name}},
      {{genres.1.name}}
      |
      {{release_date}}
      <span class='card__rating--orange card__rating--orange--my-lib'>{{vote_average}}</span>
    </p>
  </div>

</li>